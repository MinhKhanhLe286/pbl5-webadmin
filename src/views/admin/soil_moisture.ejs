<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Soil Moisture</title>
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
            rel="stylesheet">
        <link
            href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
            rel="stylesheet">
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="/admin/lib/RESET.css">
        <link rel="stylesheet" type="text/css"
            href="/admin/css/soil_moisture.css">

        <script src="/socket.io/socket.io.js"></script>
        <script src="/admin/js/soil_moisture.js"></script>
        <script>
            
        </script>

    </head>
    <body>
        <header class="top-bar">
            <div class="logo">
                <i class="ri-home-wifi-fill"></i>
                <h2>SmartGarden</h2>
            </div>
            <div class="user-info">
                <i class="ri-user-fill"></i>
                <span>Admin || Current-time: </span>
                <span id="current-time"
                    style="margin-left: 10px; font-weight: normal;"></span>
            </div>
        </header>
        <div class="container">
            <aside class="sidebar">
                <ul>
                    <li><a href="/admin/home"><i
                                class="ri-home-4-line"></i> Home</a></li>

                    <li><a href="/admin/temperature"><i
                                class="ri-thermometer-line"></i>
                            Temperature</a></li>
                    <li><a href="/admin/airHumidity"><i
                                class="ri-leaf-line"></i> Air
                            Humidity</a></li>
                    <li><a href="/admin/light"><i
                                class="ri-sun-line"></i> Light</a></li>
                    <li><a href="/admin/soilMoisture" class="active"><i
                                class="ri-drop-line"></i> Soil Moisture</a></li>
                    <li><a href="/admin/control"><i
                                class="ri-remote-control-line"></i>
                            Control</a></li>
                    <li><a href="/admin/camera"><i
                                class="ri-camera-line"></i> Camera</a></li>
                    <li><a href="/admin/statistic"><i
                                class="ri-bar-chart-line"></i>
                            Statistic</a></li>
                    <!-- <li><a href="/admin/chat"><i
                                class="ri-message-line"></i> Chat</a></li> -->
                    <li><a href="/authentication/login"><i
                                class="ri-logout-box-line"></i> Logout</a></li>
                </ul>
            </aside>
            <main class="main-content">
                <section id="soil-moisture" class="content-section">
                    <h1>Soil Moisture</h1>
                    <p>Monitor the soil moisture levels over time.</p>
                    <div class="moisture-info">
                        <div id="moisture-display" class="moisture-box">
                            <div class="moisture-card">
                                <div class="moisture-icon">
                                    <i class="ri-drop-line"></i>
                                </div>
                                <div class="moisture-info">
                                    <h3>Current Soil Moisture</h3>
                                    <span
                                        id="moisture-value">Loading...</span><span
                                        id="moisture-unit">%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="moisture-controls">
                        <div class="moisture-time-selection-row">
                            <label for="start-time-moisture">Start Time:</label>
                            <input type="datetime-local"
                                id="start-time-moisture"
                                name="start-time-moisture">
                            <label for="end-time-moisture">End Time:</label>
                            <input type="datetime-local" id="end-time-moisture"
                                name="end-time-moisture">
                        </div>
                        <div class="moisture-time-selection-button">
                            <button id="filter-moisture-data-btn">Filter
                                Data</button>
                        </div>
                    </div>
                    <div class="moisture-chart-container">
                        <h2>Soil Moisture (%)</h2>
                        <canvas id="moisture-chart-canvas"></canvas>
                    </div>
                </section>
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="soil-moisture.js"></script>
        <script>
            function updateClock() {
                const now = new Date();
                const hours = String(now.getHours()).padStart(2, '0'); // Giờ
                const minutes = String(now.getMinutes()).padStart(2, '0'); // Phút
                const seconds = String(now.getSeconds()).padStart(2, '0'); // Giây
            
                const currentTime = `${hours}:${minutes}:${seconds}`;
                document.getElementById('current-time').textContent = currentTime;
            }
            
            // Gọi hàm updateClock mỗi giây
            setInterval(updateClock, 1000);
            
            // Gọi ngay lập tức để hiển thị khi trang load
            updateClock();
            
        </script>
    </body>
</html>
